@model TaskManagement1.Models.Messages;
@{
	ViewData["Title"] = "Yanıtla";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Send Mail</h2>

<form method="post" action="/api/Messages/send">
	
	<div class="form-group">
		<label for="SenderId">Sender Mail</label>
		<input type="email" id="SenderId" name="SenderId" value="@ViewBag.Email" class="form-control" readonly required/>
	</div>
	<div class="form-group">
		<label for="ReceiverId">Receiver Mail</label>
		<input type="email" id="ReceiverId" name="ReceiverId" value="@Model.SenderId" class="form-control" required readonly />
	</div>
	<div class="form-group">
		<label for="Sunject">Subject</label>
		<input type="text" id="Sunject" name="Sunject" class="form-control" required />
	</div>
	<div class="form-group">
		<label for="Body">Body</label>
		<textarea id="Body" name="Body" class="form-control" rows="4" required></textarea>
	</div>

	<button type="submit" class="btn btn-primary">Send</button>

</form>