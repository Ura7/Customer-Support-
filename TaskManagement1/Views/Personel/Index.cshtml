@model IEnumerable<TaskManagement1.Models.Messages>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Görevler</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sunject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiverId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sunject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @if(item.Status==0)
                    {
                        <span>Okunmadı</span>
                    }
                    else if(item.Status==1)
                    {
                        <span>Okundu</span>
                    }
                    else if(item.Status==2)
                    {
                        <span>Yanıtlandı</span>
                    }
                    else if(item.Status==3)
                    {
                        <span>Çözüldü</span>
                    }
                </td>
                <td>
                    <a asp-action="Yanıtla" asp-route-id="@item.Id">Yanıtla</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Cozuldu" asp-route-id="@item.Id">Çözüldü</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@* asp-route-id="@item.Id" *@ 